# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/msmtp.log

# Gmail
account        linux
host           smtp.gmail.com
port           587
from           mchauras.linux@gmail.com
user           mchauras.linux@gmail.com
passwordeval   pass mchauras.linux/gmail

# Set a default account
account default: linux
