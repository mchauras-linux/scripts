# Basic settings
set mbox_type=Maildir
set folder="~/.mail"
set spoolfile="~/.mail/spoolfile"

# Set the location of the Maildir directory generated by lei
set spoolfile="~/.mails/sched"

# Mail directories
set record="+sent"
set postponed="+drafts"

# Display settings
set sort=threads
set sort_aux=reverse-date-received
set pager_index_lines=10
set pager_context=3
set edit_headers=yes
set mark_old=no
set markers=no
set editor="vim"
set include=ask-yes

# Mail aliases
#set alias_file=~/.mutt/aliases
#source ~/.mutt/aliases

# Signature
set signature=~/.signature

# IMAP settings for Hotmail/Outlook
set imap_user="mchauras@hotmail.com"
set folder="imaps://imap-mail.outlook.com"
set spoolfile="imaps://imap-mail.outlook.com/INBOX"
set postponed="imaps://imap-mail.outlook.com/Drafts"
set record="imaps://imap-mail.outlook.com/Sent"

# SMTP settings for Hotmail/Outlook
set smtp_url="smtp://mchauras@hotmail.com@smtp-mail.outlook.com:587"
set from="mchauras@hotmail.com"
set realname="Mukesh Kumar Chaurasiya (IBM)"

set imap_pass=`pass mutt/imap`
set smtp_pass=`pass mutt/smtp`

# Lei-specific settings
macro index,pager L "| lei q --stdin\n" "Search with lei"

# Set up colors (optional)
color header green default
color indicator brightblue default
color status brightyellow blue
color tree red default

set envelope_from=yes
set from="Mukesh Kumar Chaurasiya (IBM) <mchauras@hotmail.com>"
set use_from=yes
set edit_headers=yes
